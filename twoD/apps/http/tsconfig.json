{
  "compilerOptions": {
  "target": "es2020",
    /* Modules */
    "rootDir": "./src",   
    "outDir": "./dist",                                  
    "module": "node18",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",                    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                              
    "skipLibCheck": true,
  }
}

